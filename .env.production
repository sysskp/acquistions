# Production Environment Configuration
# Used when running with docker-compose.prod.yml and Neon Cloud Database
# IMPORTANT: Set actual production values via environment variables or secrets management

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration (Neon Cloud)
# Replace with your actual Neon Cloud Database URL
# This should be injected via environment variables in production
DATABASE_URL=postgresql://neondb_owner:your_password@your-project.aws.neon.tech/neondb?sslmode=require

# JWT Configuration
# CRITICAL: Use a strong, unique secret in production
# This should be injected via environment variables or secrets management
JWT_SECRET=your_production_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=1d

# Production specific settings
ENABLE_DEBUG=false
CORS_ORIGIN=https://yourdomain.com

# Security Headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000

# Logging Configuration
LOG_TO_FILE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5